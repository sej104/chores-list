<%- include('../partials/header.ejs')%>
<h3 class="mt-3">Delete Account</h3>
<button class="btn btn-danger" onclick="showModal()">Delete</button>
<div id="deleteAccount" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warning!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete your account?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <form method="POST" action="/users/<%= user.id %>?_method=DELETE">
                    <button type="submit" class="btn btn-primary">Yes</button>
                </form>                
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs')%>

<script> 
    let modal = new bootstrap.Modal(document.getElementById('deleteAccount')); 
    function showModal() { 
        modal.show(); 
    } 
</script>