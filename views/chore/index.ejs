<%- include('../partials/header.ejs')%>
<div class="container-fluid d-flex justify-content-between align-items-center mt-3"> 
    <h3><i class="fa-solid fa-list me-2"></i>Chores List</h3>
    <button class="btn btn-primary" onclick="showModal()" id="addTaskBtn"><i class="fa-solid fa-plus add-task-icon"></i>Add Task</button>
    <div id="addTask" class="modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/chores" method="POST" id="taskForm">
                        <div class="mb-3">
                            <label for="title" class="form-label">Task Title</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="assignTo" class="form-label">Assign To</label>
                            <select class="form-select" id="assignTo" name="assignTo">
                                <option selected value="">None</option>
                                <% users.filter(user => user.id !== req.session.user.id ).forEach(function(user) { %>
                                    <option value="<%= user.id %>"><%= user.firstName + ' ' + user.lastName %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3 row">
                            <div class="col">
                                <label for="priority" class="form-label">Priority</label>
                                <select class="form-select" id="priority" name="priority">
                                    <option selected value="None">None</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                </select>
                            </div>
                            <div class="col">
                                <label for="date" class="form-label">Date</label>
                                <input type="date" id="date" name="date" class="form-select" required>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="taskForm" id="submitBtn">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<ul class="nav nav-tabs justify-content-center">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">All</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">In Progress</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Completed</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Assigned To</a>
